<div class="row">
  <div class="col-auto">
    <h2>Welcome <!--{{last_name}}, {{first_name}}-->!</h2>
  </div>
</div>


    <p>
    <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target=".multi-collapse" aria-expanded="false" aria-controls="multiCollapseExample1 multiCollapseExample2">Open both</button>
    </p>
    <div class="row">
    <div class="col">
        <div class="collapse multi-collapse" id="multiCollapseExample1">
        <div class="card card-body">
    <table id="parkingSlots" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>          
            <th>Parking Spot Address</th>
            <th>Modify</th>
        </tr>
    </thead>
    
    {{#each parkingSlotsInfo as |parkingSlotInfo|}}
    <tbody>
        <tr>
            <td>{{parkingSlotInfo.address.slotNo}}, {{parkingSlotInfo.address.street_number}} {{parkingSlotInfo.address.street_name}}, {{parkingSlotInfo.address.suburb}}, {{parkingSlotInfo.address.state}}-{{parkingSlotInfo.address.postcode}}</td>
            <td>
                {{parkingSlotInfo.locationTags.locationTag}}
            </td>
        </tr>
            {{#if parkingSlotInfo.parkingDatesAvailable}}
                <table id="parkingSlotsDate_"+{{parkingSlotInfo.id}} class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>          
                            <th>Date</th>
                            <th>Rate</th>
                            <th>Modify</th>
                        </tr>
                    </thead>   
                    {{#each parkingSlotInfo.parkingDatesAvailable as  |parkingDate|}}
                    <tbody>
                        <tr id={{parkingDate.id}}>
                            <td><input type="text" name="Date" id="date_{{parkingDate.id}}" value={{parkingDate.date}} readonly></td>
                            <td><input type="text" name="Rate" id="rate_{{parkingDate.id}}" value={{parkingDate.rate}} readonly></td>
                            <td>
                                <button type="click" class="btn btn-success"  name="delete_{{parkingDate.id}}" id="delete" data-id={{parkingDate.id}} >Delete</button>
                            </td>
                            <td>
                                <button type="click" class="btn btn-success" name="edit_{{parkingDate.id}}" id="edit" data-id={{parkingDate.id}} >Edit</button>
                            </td>
                            <!--<td>
                                <button type="click" class="btn btn-success"  id="submit" data-id={{parkingDate.id}} >Submit Change</button>
                            </td> -->
                        </tr>
                    </tbody>
                    {{/each}}
                </table>
            {{/if}}    
        </tbody>
        {{/each}}
    </table>
        </div>
        </div>
    </div>
    <div class="col">
        <div class="collapse multi-collapse" id="multiCollapseExample2">
        <div class="card card-body">
